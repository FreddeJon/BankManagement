<div class="container search-customer">
    <div class="row  d-flex justify-content-center align-items-center">
        <div class="col">
            <form class="nav-item" id="LoadCustomer">
                <div class="form"> <i class="fa fa-search"></i> <input type="text" class="form-control form-input" placeholder="Customer Number..."> </div>
            </form>

        </div>

    </div>
</div>

<script>
    const LoadCustomer = document.querySelector('#LoadCustomer');

    LoadCustomer.onsubmit = (e) => {
        e.preventDefault();


        const inp = e.target[0].value;

       const num = parseInt(inp);

        if (!isNaN(num)) {
            console.log("number");
            window.location.href = `/Customers/${num}`;
        }
        e.target[0].value = "";
    }

</script>