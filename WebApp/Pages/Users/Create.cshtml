@page
@model WebApp.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}




<div class="container-fluid">
    <div class="card bg-light mt-3">
        <div class="card-body pt-3">
            <div class="row mb-1 mt-0 pt-0 pb-0">
                <div class="col">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb text-dark mb-0 pt-0 bg-transparent">
                            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                            <li class="breadcrumb-item"><a asp-page="/Users/Index">Users</a></li>
                            <li class="breadcrumb-item text-primary" aria-current="page">Create</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="container-fluid">
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="row justify-content-between">
                            <div class="col-md-auto">
                                <p class="fs-6 mb-1">Create a new user</p>
                            </div>
                        </div>
                        <div>
                            <form method="POST">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <label asp-for="Email" class="col-lg-4 col-form-label">
                                        Email
                                    </label>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            <input asp-for="Email" type="text" class="form-control" aria-label="Email" placeholder="Email">
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label asp-for="Username" class="col-lg-4 col-form-label">
                                        Username
                                    </label>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            <input asp-for="Username" type="text" class="form-control" aria-label="Username" placeholder="Username">
                                        </div>
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Password" class="col-lg-4 col-form-label">
                                        Password
                                    </label>
                                    <div class="col-lg-6">
                                        <div class="input-group">
                                            <input asp-for="Password" type="text" class="form-control" aria-label="Password" placeholder="Password">
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-4 mr-3">Set as admin</div>
                                    <div class="form-check col-lg-6">
                                        <input asp-for="IsAdmin" class=" form-check-input" id="isAdmin">
                                        <label asp-for="IsAdmin" class="form-check-label" for="isAdmin">
                                            Admin
                                        </label>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-dark">Register</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
<partial name="Shared/_ValidationScriptsPartial" />

}